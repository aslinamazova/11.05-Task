@model List<RecentWork>
@{
    ViewData["Title"] = "RecentWorks";
    int count = 1;
}

<span class=" alert alert-warning">@TempData["Exists"]</span>
<div class="d-flex justify-content-end mb-2">
    <a class="btn btn-success text-light" asp-area="Admin" asp-controller="RecentWork" asp-action="Create">Create Work</a>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Number
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                               Description
                            </th>
                            <th>
                                Image
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (RecentWork item in Model)
                        {
                            <tr>
                                <td> @count</td>

                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    <img src="~/assets/img/@item.ImagePath" style="height:150px; width:150px;"></img>
                                </td>
                                <td>
                                    <a class="btn btn-warning text-light" asp-area="Admin" asp-controller="RecentWork" asp-action="Update" asp-route-Id="@item.Id">
                                        @*<i class="mdi mdi-grease-pencil"></i>*@
                                        Update
                                    </a>
                                    <a class="btn btn-danger text-light" asp-area="Admin" asp-controller="RecentWork" asp-action="Delete" asp-route-Id="@item.Id">
                                        @*<i class="mdi mdi-delete-forever"></i>*@
                                        Delete
                                    </a>
                                </td>
                            </tr>
                            count++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


