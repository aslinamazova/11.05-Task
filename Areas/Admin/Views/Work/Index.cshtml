@model ICollection<Work>
@{
    int count = 1;
}


<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Table with contextual classes</h4>
            <table class="table table-bordered">
                <thead>
                    <tr class="table-info">
                        <th> Number </th>
                        <th> Name </th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (Work item in Model)
                        {
                            <tr class="table-info">
                                <td> @count</td>

                                <td>
                                    @item.Name
                                </td>
                                <td>
                                   
                                     <a class="btn btn-info text-light" asp-area="Admin" asp-controller="Work" asp-action="Create">Create Work</a>
                                    <a class="btn btn-primary text-light">Detail</a>
                                    <a class="btn btn-success text-light" asp-area="Admin" asp-controller="Work" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                                    <a class="btn btn-warning text-light" asp-area="Admin" asp-controller="Work" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                                </td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
