@model ICollection<Service>
@{
    int count = 1;
}


<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Table with contextual classes</h4>
            <table class="table table-bordered">
                <thead>
                    <tr class="table-info">
                        <th>
                            Number
                        </th>
                        <th>
                            Name
                        </th>

                        <th>
                            Price
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (Service item in Model)
                    {
                        <tr>
                            <td> @count</td>

                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Price
                            </td>
                            <td>

                                <a class="btn btn-info text-light" asp-area="Admin" asp-controller="Service" asp-action="Create">Create Service</a>

                                <a class="btn btn-success text-light">Detail</a>
                                <a class="btn btn-danger text-light" asp-area="Admin" asp-controller="Service" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                                <a class="btn btn-primary text-light" asp-area="Admin" asp-controller="Service" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                            </td>
                        </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
</div>






                                
                              
    
